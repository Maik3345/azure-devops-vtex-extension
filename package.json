{
  "name": "pco-mkp-azure-vtex-extension-front",
  "version": "1.6.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "initdev": "npm run initdev:npm",
    "initdev:npm": "npm run initdev:npm:base & npm run initdev:npm:tasks",
    "initdev:npm:base": "npm install --no-progress --no-update-notifier --legacy-peer-deps --no-fund",
    "initdev:npm:audit": "glob-exec --parallel --foreach \"tasks/*/tsconfig.json\" -- \"cd {{file.dir}} && npm audit fix --no-update-notifier --no-progress --legacy-peer-deps --no-fund\"",
    "initdev:npm:tasks": "glob-exec --parallel --foreach \"tasks/*/tsconfig.json\" -- \"cd {{file.dir}} && npm install --no-update-notifier --no-progress --legacy-peer-deps --no-fund\"",
    "compile:tasks": "glob-exec \"tasks/*/tsconfig.json\" -- \"tsc -b {{files.join(' ')}}\"",
    "dev": "glob-exec \"tasks/*/tsconfig.json\" -- \"tsc -b {{files.join(' ')}} --watch\"",
    "package:tasks": "tfx extension create --root . --output-path dist --manifest-globs vss-extension.json",
    "build": "npm run compile:tasks",
    "build:clean": "npm run clean && npm run initdev && npm run build",
    "package": "npm run build:clean && npm run package:tasks",
    "prettier": "npx prettier --write .",
    "clean": "git clean -fdX"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "eslint": "^8.52.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob-exec": "^0.1.1",
    "husky": "^9.0.10",
    "prettier": "2.5.1",
    "tfx-cli": "^0.17.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/node": "^20.11.17"
  }
}
